@{
}
@model List<Teacher_Student_platform.Models.Entities.quesAns>

<h1>Question ans Answer</h1>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Question</th>
            <th>Answer</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var quesAns in Model)
        {
            <tr>
                <td>@quesAns.Id</td>
                <td>@quesAns.Name</td>
                <td>@quesAns.Email</td>
                <td>@quesAns.Question</td>
                <td>@quesAns.Answer</td>
                <td>
                    <a class="btn btn-primary" asp-controller="QueAns" asp-action="Edit" asp-all-route-id="@quesAns.Id">Reply-Ques</a>

                </td>
            </tr>
        }
    </tbody>
</table>